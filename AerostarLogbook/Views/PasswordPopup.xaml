<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AerostarLogbook.Views.PasswordPopup"
             Title="Password"
             WidthRequest="400"
             HeightRequest="300">
    <StackLayout Padding="20">
        <Label Text="This action requires administrator password:" HorizontalOptions="CenterAndExpand"/>
        <Entry x:Name="txtPassword" Placeholder="Enter password" IsPassword="True" HorizontalOptions="CenterAndExpand"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button x:Name="btnSubmit" Text="Submit" BackgroundColor="Green"/>
            <Button x:Name="btnBack" Text="Back" Clicked="BtnBack_Clicked" BackgroundColor="Red"/>
        </HorizontalStackLayout>
        
    </StackLayout>
</ContentPage>